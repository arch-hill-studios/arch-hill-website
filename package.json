{
  "name": "nextjs-sanity-template",
  "version": "0.1.0",
  "description": "A production-ready Next.js + Sanity CMS website template with comprehensive SEO, email forms, and modern architecture",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "predev": "npm run typegen",
    "prebuild": "npm run typegen",
    "typegen": "sanity schema extract --path=./src/sanity/extract.json && sanity typegen generate",
    "migrate:homepage": "tsx scripts/migrate-homepage.ts",
    "setup": "npx npm-check-updates -u && npm install"
  },
  "dependencies": {
    "@react-email/components": "^1.0.7",
    "@react-email/render": "^2.0.4",
    "@sanity/color-input": "^6.0.4",
    "@sanity/icons": "^3.7.4",
    "@sanity/image-url": "^2.0.3",
    "@sanity/vision": "^5.8.1",
    "@sanity/visual-editing": "^5.2.1",
    "critters": "^0.0.25",
    "dayjs": "^1.11.19",
    "next": "^16.1.6",
    "next-sanity": "^12.1.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.1",
    "react-icons": "^5.5.0",
    "resend": "^6.9.1",
    "sanity": "^5.8.1",
    "styled-components": "^6.3.8"
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Firefox versions",
    "last 2 Safari versions",
    "last 2 Edge versions",
    ">0.2%",
    "not dead",
    "not IE 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@sanity/client": "^7.14.1",
    "@tailwindcss/postcss": "^4",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "dotenv": "^17.2.4",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
